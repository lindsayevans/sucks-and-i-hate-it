<body id="<%= params[:controller] -%>" class="<%= params[:action] -%>">

<div id="page-wrapper" class="fluid-proportional">

	<div id="header" class="h5-header">

		<ul id="skip-navigation">
			<li><a href="#content">Skip to content</a></li>
			<li><a href="#navigation">Skip to navigation</a></li>
		</ul>

		<h2><a href="#">Sucks and I hate it</a></h2>
		<h3>Anti-social networking</h3>

		<div id="user-bar">
			<ul>
				<li id="user-bar-welcome">Welcome back, John Doe!</li>
				<li id="user-bar-logout"><a href="#">Log out</a></li>
				<li id="user-bar-profile"><a href="#">Your profile</a></li>
			</ul>
		</div>

	</div>

	<div id="content">
<%= yield -%>
	</div>

	<div id="footer" class="h5-footer">
